<config>
    <sections>
        <pickupshipping translate="label" module="TuxWeb_PickupShipping">
            <label>Pickup Shipping</label>
            <tab>shipping</tab>
            <frontend_model>adminhtml/system_config_form_fieldset</frontend_model>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <fields>
                <enabled translate="label">
                    <label>Enabled</label>
                    <comment><![CDATA[Disabling extension will cease two-way linking and removal entirely]]></comment>
                    <frontend_type>select</frontend_type>
                    <source_model>adminhtml/system_config_source_yesno</source_model>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                </enabled>
                <logging translate="label">
                    <label>Logging</label>
                    <comment><![CDATA[Logging is disabled if extension is disabled. See tuxweb_pickupshipping.log.]]></comment>
                    <frontend_type>select</frontend_type>
                    <source_model>adminhtml/system_config_source_yesno</source_model>
                    <sort_order>200</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                </logging>
                <allowed_provinces translate="label">
                    <label>Allowed Provinces</label>
                    <frontend_type>multiselect</frontend_type>
                    <source_model>TuxWeb_PickupShipping_Model_System_Config_Source_Province</source_model>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                </allowed_provinces>
            </fields>
        </pickupshipping>
    </sections>
</config>